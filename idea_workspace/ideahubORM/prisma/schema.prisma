// Prisma Schema for Workspace Microservice
// ==========================================
// WARNING: DO NOT run `prisma db push` or `prisma migrate` from this service!
// The database schema is managed by the main IDEA_HUB application.
// This schema is ONLY for generating the Prisma client.
// ==========================================

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This model must match the File model in the main app's schema
// Any changes should be made in /workspaces/IDEA_HUB/prisma/schema.prisma
model File {
  id         String   @id @default(cuid())
  fileName   String   @map("file_name")
  document   Json?
  whiteboard Json?
  archived   Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  
  @@map("files")
}
